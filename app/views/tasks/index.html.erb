<div class="container">
    <h1>Listing tasks</h1>


        <% @tasks.each do |task| %>
        <div class="taskBox">
            <h2><%= task.name %></h2>
            <p>$<%= task.price %></p>
            <p><%= task.description %></p>
            <p><%= link_to 'Show', task, :class => "button" %></p>
            <p><%= link_to 'Edit', edit_task_path(task), :class =>"button" %></p>
            <p><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button" %></p>
        </div>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Task', new_task_path %>
</div>