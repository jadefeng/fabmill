<div class="container">
	<h1>Login</h1>
	<%= form_tag '/login' do %>
	  <div class="form-group">
	    <%= label_tag :email %>
	    <%= text_field_tag :email, nil, :autofocus => true, :class => 'form-control' %>
	  </div>
	  <div class="form-group">
	    <%= label_tag :password %>
	    <%= password_field_tag :password, nil, :class => 'form-control' %>
	  </div>
	  <%= submit_tag 'Login', :class => 'btn btn-default' %>

	<% end %>
</div>